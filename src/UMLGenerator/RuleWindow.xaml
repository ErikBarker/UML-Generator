<Window x:Class="UMLGenerator.RuleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UMLGenerator"
        mc:Ignorable="d"
        Title="RuleWindow" Height="600" Width="800"
        WindowStyle="SingleBorderWindow" ResizeMode="CanResize">


    <Grid Name="MainRuleGrid">


        <Button Content="New Rule Set" Width="300" Grid.Column="0" Grid.Row="0" Click="CreateNewRule_Click"/>

        <ScrollViewer HorizontalScrollBarVisibility="Disabled" Name="RuleScrollBar" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
            <StackPanel Name="ButtonPanel" VerticalAlignment="Top" HorizontalAlignment="Left">
                
            </StackPanel>
        </ScrollViewer>

        <TextBlock Text="Rule Set Editor" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0"></TextBlock>

        <Grid Name="RuleSetGrid" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="2">

        </Grid>
    </Grid>
</Window>