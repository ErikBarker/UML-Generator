<Window x:Class="UMLGenerator.RuleSetWindowCreationPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UMLGenerator"
        mc:Ignorable="d"
        Title="RuleSet Creation" Height="300" Width="400"
        WindowStyle="SingleBorderWindow" ResizeMode="CanResize">

    <Grid Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Text="Language:" TextAlignment="Center" Grid.Column="0" Grid.Row="0"></TextBlock>
        <TextBox Name="LanguageTextBox" Grid.Column="1" Grid.Row="0"></TextBox>

        <TextBlock Text="Vertion:" TextAlignment="Center" Grid.Column="0" Grid.Row="1"></TextBlock>
        <TextBox Name="VertionTextBox" Grid.Column="1" Grid.Row="1"></TextBox>

        <Button Content="Save" Grid.Column="0" Grid.Row="2" Click="SaveButton_Click"/>
        <Button Content="Cancel" Grid.Column="1" Grid.Row="2" Click="CancelButton_Click"/>

    </Grid>
</Window>