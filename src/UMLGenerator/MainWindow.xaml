<Window x:Class="UMLGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UMLGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">

    

    <Grid>

    <ToolBarTray Background="White">
        <ToolBar Band="1" BandIndex="1">
            <Button Content="Test" Width="100" Height="50" HorizontalAlignment="Left"
                VerticalAlignment="Top" Margin="10"> </Button>
        </ToolBar>
    </ToolBarTray>

        <!-- Canvas for drawing UML elements -->
        <Canvas Name="DrawingCanvas" Background="White" Margin="10"/>
        
        <!-- Button to add a UML class box -->
        <Button Content="Add UML Class" Width="120" Height="30" HorizontalAlignment="Right"
                VerticalAlignment="Top" Margin="10" Click="AddClassBox_Click"/>
    </Grid>
</Window>
